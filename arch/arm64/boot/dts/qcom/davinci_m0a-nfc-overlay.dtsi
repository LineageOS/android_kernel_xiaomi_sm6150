/* change m0a NFC GPIO ven pin */
&qupv3_se2_i2c {
	status = "ok";
	qcom,clk-freq-out = <1000000>;
	nq@28 {
		compatible = "qcom,nq-nci";
		reg = <0x28>;
		qcom,nq-irq = <&tlmm 37 0x00>;
		qcom,nq-ven = <&tlmm 67 0x00>;
		qcom,nq-firm = <&tlmm 36 0x00>;
		qcom,nq-clkreq = <&tlmm 31 0x00>;
		interrupt-parent = <&tlmm>;
		interrupts = <37 0>;
		interrupt-names = "nfc_irq";
		pinctrl-names = "nfc_active", "nfc_suspend";
		pinctrl-0 = <&nfc_int_active &nfc_enable_active
				&nfc_clk_req_active>;
		pinctrl-1 = <&nfc_int_suspend &nfc_enable_suspend
				&nfc_clk_req_suspend>;
	};
};

&nfc_enable_active {
	/* active state */
	mux {
		/* 67: NFC ENABLE; 36:NFC FIRM */
		pins = "gpio67", "gpio36";
		function = "gpio";
	};

	config {
		pins = "gpio67", "gpio36";
		drive-strength = <2>; /* 2 MA */
		bias-pull-up;
	};
};
&nfc_enable_suspend {
	/* sleep state */
	mux {
		pins = "gpio67", "gpio36";
		function = "gpio";
	};

	config {
		pins = "gpio67", "gpio36";
		drive-strength = <2>; /* 2 MA */
		bias-disable;
	};
};
